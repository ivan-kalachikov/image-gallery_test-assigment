{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-rational-order",
        "stylelint-prettier/recommended"
    ],
    "plugins": [
        "stylelint-order",
        "stylelint-scss"
    ],
    "rules": {
        "prettier/prettier": [
            true,
            {
                "singleQuote": true,
                "tabWidth": 2
            }
        ]
    }
}